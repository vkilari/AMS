<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:height="8dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@android:color/transparent"
                android:startColor="#4D000000"
                android:type="linear" />
        </shape>
    </item>
    <item android:top="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/mcd_enabled_yellow_button_end_color"
                android:startColor="@color/mcd_enabled_yellow_button_start_color"
                android:type="linear" />
            <corners android:radius="@dimen/button_large_radius" />
        </shape>
    </item>
</layer-list>
