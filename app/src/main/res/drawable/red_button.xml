<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#90A4AE" />
            <stroke

                android:color="#607D8B" />
            <corners
                android:radius="6dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#90A4AE"
                android:endColor="#607D8B"
                android:angle="270" />
            <stroke

                android:color="#607D8B" />
            <corners
                android:radius="6dp" />

        </shape>
    </item>
</selector>